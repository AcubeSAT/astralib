{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
<style>
    html {
        background-color: #1e87f0;
    }
</style>
{% endblock %}

{% block body %}
    {# {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %} #}

    <div class="uk-card uk-card-body uk-card-default uk-width-large uk-margin-auto uk-margin-top uk-box-shadow-large">
        <div class="uk-card-title uk-text-center">
            <div class="uk-border-rounded grey lighten-3 uk-padding-small uk-display-inline-block">
                <span uk-icon="icon: user; ratio: 3"></span>
            </div>
            <h3 class="uk-margin-small-top">Member Sign-In</h3>
        </div>
        <div>
            {% if error %}
                <div class="uk-alert-danger uk-margin-top" uk-alert>
                    <a class="uk-alert-close" uk-close></a>
                    <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                </div>
            {% endif %}

            <form class="uk-form-stacked" method="POST">
                <div class="uk-margin">
                    <label class="uk-form-label" for="inputUsername">LDAP Username</label>
                    <div class="uk-form-controls">
                        <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="uk-input text-ttt" autocomplete="username" required autofocus>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="inputUsername">LDAP Password</label>
                    <div class="uk-form-controls">
                        <input type="password" name="_password" id="inputPassword" class="uk-input text-ttt" autocomplete="current-password" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                <button class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom" type="submit">Sign In</button>
                <button class="uk-button uk-button-default uk-width-1-1 uk-margin-small-bottom" onclick="window.history.go(-1); return false;">Back</button>
            </form>

        </div>
    </div>

    <div class="design-strut-1"></div>
    <div class="design-strut-2"></div>



    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
{% endblock %}
